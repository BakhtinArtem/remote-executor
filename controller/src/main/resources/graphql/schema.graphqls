type Query {
    graphById(id: ID): Graph
    executeGraph(graphId: Int): Execution!
}

type Mutation {
    createGraph(input: GraphInput): Graph!
}

input GraphInput {
    name: String!
    nodes: [NodeInput!]!
    edges: [EdgeInput!]!
}

input NodeInput {
    id: ID
    filename: String!
    image: String!
    isRoot: Boolean!
}

input EdgeInput {
    from: Int!
    to: Int!
}

type Node {
    id: ID
    filename: String!
    image: String!
    isRoot: Boolean!
}

enum ExecutionStatus {
    IDLE,
    RUNNING,
    ERROR,
    FINISHED
}

type Execution {
    id: ID
    startTime: String!
    endTime: String!
    status: ExecutionStatus!
}

type Graph {
    id: ID
    name: String!
    node: [Node]!
}